{
	"compilerOptions": {
    "outDir": "build/es5",
    "module": "commonjs",
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
    "module": "commonjs",
